<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
            init方法，用于需要初始化的操作
            程序运行就加载出来
    -->

    <bean class="com.sz.bean.User" id="user" init-method="userName">
        <property name="name" value="张嘎"/>
        <property name="word" value="三天不打小鬼子，手都痒痒！"/>
    </bean>

    <bean class="com.sz.bean.User" id="user2" init-method="userName">
        <property name="name" value="Rod"/>
        <property name="word" value="世界上有10种人，认识二进制的和不认识二进制的！"/>
    </bean>

</beans>